<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JoinActivity2">

    <LinearLayout
        android:id="@+id/back_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:rotation="90"
            android:src="@drawable/downarrow" />

        <TextView
            android:id="@+id/M2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Sign up"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="italic|bold" />
    </LinearLayout>


    <!--1-->
    <EditText
        android:id="@+id/userP_num1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="53dp"
        android:autofillHints="name"
        android:background="@drawable/edit_style"
        android:hint="전화번호를 입력해 주세요."
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/back_layout"
        app:layout_constraintStart_toStartOf="@id/back_layout"
        app:layout_constraintTop_toBottomOf="@id/back_layout" />

    <TextView
        android:id="@+id/Call1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="46dp"
        android:background="@color/white"
        android:paddingHorizontal="2dp"
        android:text="CALL"
        android:textColor="#FF7372"
        android:textSize="10sp"
        android:textStyle="italic|bold"
        app:layout_constraintStart_toStartOf="@id/userP_num1"
        app:layout_constraintTop_toBottomOf="@id/back_layout" />

    <!--2-->
    <EditText
        android:id="@+id/userAdd1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:autofillHints="name"
        android:background="@drawable/edit_style"
        android:hint="주소를 입력해 주세요."
        android:paddingLeft="10dp"
        android:textColorHint="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/back_layout"
        app:layout_constraintStart_toStartOf="@id/back_layout"
        app:layout_constraintTop_toBottomOf="@id/userP_num1" />

    <TextView
        android:id="@+id/Adr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:paddingHorizontal="2dp"
        android:text="ADD"
        android:textColor="#FF7372"
        android:textSize="10sp"
        android:textStyle="italic|bold"
        app:layout_constraintStart_toStartOf="@id/Call1"
        app:layout_constraintTop_toBottomOf="@id/userP_num1" />

    <ImageView
        android:id="@+id/search_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="11dp"
        android:src="@drawable/search"
        app:layout_constraintBottom_toBottomOf="@id/userAdd1"
        app:layout_constraintEnd_toEndOf="@id/userAdd1"
        app:layout_constraintTop_toTopOf="@id/userAdd1" />


    <!--3-->

    <EditText
        android:id="@+id/userBank1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:autofillHints="name"
        android:background="@drawable/edit_style"
        android:hint="은행을 선택해주세요."
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/back_layout"
        app:layout_constraintStart_toStartOf="@id/back_layout"
        app:layout_constraintTop_toBottomOf="@id/userAdd1" />

    <TextView
        android:id="@+id/Bank1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:paddingHorizontal="2dp"
        android:text="BANK"
        android:textColor="#FF7372"
        android:textSize="10sp"
        android:textStyle="italic|bold"
        app:layout_constraintStart_toStartOf="@id/Call1"
        app:layout_constraintTop_toBottomOf="@id/userAdd1" />

    <ImageView
        android:id="@+id/arrow_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="11dp"
        android:rotation="-90"
        android:src="@drawable/downarrow"
        app:layout_constraintBottom_toBottomOf="@id/userBank1"
        app:layout_constraintEnd_toEndOf="@id/userBank1"
        app:layout_constraintTop_toTopOf="@id/userBank1" />


    <!--4-->

    <EditText
        android:id="@+id/userAcn1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:autofillHints="name"
        android:background="@drawable/edit_style"
        android:hint="계좌를 입력해 주세요."
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/back_layout"
        app:layout_constraintStart_toStartOf="@id/back_layout"
        app:layout_constraintTop_toBottomOf="@id/userBank1" />

    <TextView
        android:id="@+id/Acn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:paddingHorizontal="2dp"
        android:text="ACN"
        android:textColor="#FF7372"
        android:textSize="10sp"
        android:textStyle="italic|bold"
        app:layout_constraintStart_toStartOf="@id/Call1"
        app:layout_constraintTop_toBottomOf="@id/userBank1" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Join_btn1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="121dp"
        android:background="@drawable/btn_style"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>