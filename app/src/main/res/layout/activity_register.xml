<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".JoinActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/jua"
        android:text="사이사이"
        android:textColor="@color/MainColor"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:background="@color/white"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/Arrow_avName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/arrow_scarlet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/jua"
                android:text="광고제목"
                android:textColor="@color/MainColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/Arrow_avName"
                app:layout_constraintStart_toEndOf="@id/Arrow_avName"
                app:layout_constraintTop_toTopOf="@id/Arrow_avName" />

            <EditText
                android:id="@+id/StName_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/round_gray"
                android:hint="광고제목을 입력하세요."
                android:paddingLeft="10dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Arrow_avName" />

            <ImageView
                android:id="@+id/Arrow_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:src="@drawable/arrow_scarlet"
                app:layout_constraintStart_toStartOf="@id/Arrow_avName"
                app:layout_constraintTop_toBottomOf="@id/StName_ET" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/jua"
                android:text="사업자 등록번호/주민등록번호"
                android:textColor="@color/MainColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/Arrow_business"
                app:layout_constraintStart_toEndOf="@id/Arrow_business"
                app:layout_constraintTop_toTopOf="@id/Arrow_business" />

            <EditText
                android:id="@+id/businessNum_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_gray"
                android:textColor="@color/black"
                android:hint="사업자 등록번호/주민등록번호(개인일 경우)"
                android:paddingLeft="10dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@id/StName_ET"
                app:layout_constraintStart_toStartOf="@id/StName_ET"
                app:layout_constraintTop_toBottomOf="@id/Arrow_business" />

            <ImageView
                android:id="@+id/Arrow_represent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:src="@drawable/arrow_scarlet"
                app:layout_constraintStart_toStartOf="@id/Arrow_avName"
                app:layout_constraintTop_toBottomOf="@id/businessNum_ET" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/jua"
                android:text="대표자명"
                android:textColor="@color/MainColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/Arrow_represent"
                app:layout_constraintStart_toEndOf="@id/Arrow_represent"
                app:layout_constraintTop_toTopOf="@id/Arrow_represent" />

            <EditText
                android:id="@+id/represent_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_gray"
                android:textColor="@color/black"
                android:hint="대표자명을 입력하세요."
                android:paddingLeft="10dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@id/StName_ET"
                app:layout_constraintStart_toStartOf="@id/StName_ET"
                app:layout_constraintTop_toBottomOf="@id/Arrow_represent" />

            <ImageView
                android:id="@+id/Arrow_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:src="@drawable/arrow_scarlet"
                app:layout_constraintStart_toStartOf="@id/Arrow_avName"
                app:layout_constraintTop_toBottomOf="@id/represent_ET" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/jua"
                android:text="이메일"
                android:textColor="@color/MainColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/Arrow_mail"
                app:layout_constraintStart_toEndOf="@id/Arrow_mail"
                app:layout_constraintTop_toTopOf="@id/Arrow_mail" />

            <EditText
                android:id="@+id/mail_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_gray"
                android:hint="이메일을 입력하세요."
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@id/StName_ET"
                app:layout_constraintStart_toStartOf="@id/StName_ET"
                app:layout_constraintTop_toBottomOf="@id/Arrow_mail" />

            <ImageView
                android:id="@+id/Arrow_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:src="@drawable/arrow_scarlet"
                app:layout_constraintStart_toStartOf="@id/Arrow_avName"
                app:layout_constraintTop_toBottomOf="@id/mail_ET" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/jua"
                android:text="광고기간"
                android:textColor="@color/MainColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/Arrow_period"
                app:layout_constraintStart_toEndOf="@id/Arrow_period"
                app:layout_constraintTop_toTopOf="@id/Arrow_period" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Date_layout"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/Arrow_mainImg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Arrow_period">

                <TextView
                    android:id="@+id/tv_startDay"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/round_left_gray"
                    android:gravity="center_vertical"
                    android:hint="시작일"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/firstDayLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/firstDayLayout"
                    android:layout_width="35dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_right_gray"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_startDay"
                    app:layout_constraintEnd_toStartOf="@id/wave"
                    app:layout_constraintStart_toEndOf="@id/tv_startDay"
                    app:layout_constraintTop_toTopOf="@id/tv_startDay"
                    app:layout_constraintVertical_bias="0.0">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/firstDayBtn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/date"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/wave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_startDay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_startDay" />

                <TextView
                    android:id="@+id/tv_endDay"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/round_left_gray"
                    android:gravity="center_vertical"
                    android:hint="종료일"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_startDay"
                    app:layout_constraintEnd_toStartOf="@id/endDayLayout"
                    app:layout_constraintStart_toEndOf="@id/wave"
                    app:layout_constraintTop_toTopOf="@id/tv_startDay" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/endDayLayout"
                    android:layout_width="35dp"
                    android:layout_height="0dp"
                    android:background="@drawable/round_right_gray"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_endDay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_endDay"
                    app:layout_constraintTop_toTopOf="@id/tv_endDay">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/endDayBtn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/date"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/Arrow_mainImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:src="@drawable/arrow_scarlet"
                app:layout_constraintStart_toStartOf="@id/Arrow_avName"
                app:layout_constraintTop_toBottomOf="@id/Date_layout" />

            <TextView
                android:id="@+id/main_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/jua"
                android:text="메인사진"
                android:textColor="@color/MainColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/Arrow_mainImg"
                app:layout_constraintStart_toEndOf="@id/Arrow_mainImg"
                app:layout_constraintTop_toTopOf="@id/Arrow_mainImg" />

            <TextView
                android:id="@+id/tv_mainImg1"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_left_gray"
                android:gravity="center_vertical"
                android:hint="사진을 선택해주세요."
                android:paddingStart="12dp"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/mainImgBtn_layout1"
                app:layout_constraintStart_toStartOf="@id/StName_ET"
                app:layout_constraintTop_toBottomOf="@id/main_img" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainImgBtn_layout1"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:background="@drawable/round_right_gray"
                app:layout_constraintBottom_toBottomOf="@id/tv_mainImg1"
                app:layout_constraintEnd_toEndOf="@id/Date_layout"
                app:layout_constraintTop_toTopOf="@id/tv_mainImg1">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/mainImgBtn1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/img"
                    android:scaleX="0.9"
                    android:scaleY="0.8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_mainImg2"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_left_gray"
                android:gravity="center_vertical"
                android:hint="사진을 선택해주세요."
                android:paddingStart="12dp"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/tv_mainImg1"
                app:layout_constraintStart_toStartOf="@id/tv_mainImg1"
                app:layout_constraintTop_toBottomOf="@id/mainImgBtn_layout1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainImgBtn_layout2"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:background="@drawable/round_right_gray"
                app:layout_constraintBottom_toBottomOf="@id/tv_mainImg2"
                app:layout_constraintEnd_toEndOf="@id/mainImgBtn_layout1"
                app:layout_constraintStart_toEndOf="@id/tv_mainImg2"
                app:layout_constraintTop_toTopOf="@id/tv_mainImg2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/mainImgBtn2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/img"
                    android:scaleX="0.9"
                    android:scaleY="0.8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_mainImg3"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_left_gray"
                android:gravity="center_vertical"
                android:hint="사진을 선택해주세요."
                android:paddingStart="12dp"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/tv_mainImg1"
                app:layout_constraintStart_toStartOf="@id/tv_mainImg1"
                app:layout_constraintTop_toBottomOf="@id/mainImgBtn_layout2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainImgBtn_layout3"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:background="@drawable/round_right_gray"
                app:layout_constraintBottom_toBottomOf="@id/tv_mainImg3"
                app:layout_constraintEnd_toEndOf="@id/mainImgBtn_layout2"
                app:layout_constraintStart_toEndOf="@id/tv_mainImg3"
                app:layout_constraintTop_toTopOf="@id/tv_mainImg3">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/mainImgBtn3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/img"
                    android:scaleX="0.9"
                    android:scaleY="0.8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/Arrow_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/arrow_scarlet"
                app:layout_constraintStart_toStartOf="@id/Arrow_avName"
                app:layout_constraintTop_toBottomOf="@id/mainImgBtn_layout3" />

            <TextView
                android:id="@+id/write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/jua"
                android:text="상점소개"
                android:textColor="@color/MainColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/Arrow_store"
                app:layout_constraintStart_toEndOf="@id/Arrow_store"
                app:layout_constraintTop_toTopOf="@id/Arrow_store" />

            <EditText
                android:id="@+id/store_et"
                android:layout_width="0dp"
                android:layout_height="323dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_gray"
                android:gravity="top"
                android:hint="자신의 상점을 자유롭게 설명해주세요!"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@id/StName_ET"
                app:layout_constraintStart_toStartOf="@id/StName_ET"
                app:layout_constraintTop_toBottomOf="@id/write" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/spinner_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@id/StName_ET"
                app:layout_constraintStart_toStartOf="@id/StName_ET"
                app:layout_constraintTop_toBottomOf="@id/store_et">

                <Spinner
                    android:popupBackground="@color/TextGray"
                    android:id="@+id/event_spinner"
                    android:layout_width="81dp"
                    android:layout_height="0dp"
                    android:background="@drawable/spinner_background"
                    android:dropDownWidth="81dp"
                    android:overlapAnchor="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/category_spinner"
                    android:layout_width="81dp"
                    android:popupBackground="@color/TextGray"
                    android:layout_height="0dp"
                    android:background="@drawable/spinner_background"
                    android:dropDownWidth="81dp"
                    android:overlapAnchor="false"
                    android:paddingRight="12dp"
                    app:layout_constraintEnd_toStartOf="@id/et_time"
                    app:layout_constraintStart_toEndOf="@id/event_spinner"
                    app:layout_constraintTop_toTopOf="@id/event_spinner" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/clock"
                    app:layout_constraintBottom_toBottomOf="@id/et_time"
                    app:layout_constraintStart_toStartOf="@id/et_time"
                    app:layout_constraintTop_toTopOf="@id/et_time" />

                <EditText
                    android:id="@+id/et_time"
                    android:layout_width="97dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/round_gray"
                    android:gravity="center"
                    android:hint="09:00 ~ 18:00"
                    android:maxLength="13"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/TextGray"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/Arrow_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/arrow_scarlet"
                app:layout_constraintStart_toStartOf="@id/Arrow_avName"
                app:layout_constraintTop_toBottomOf="@id/spinner_layout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/jua"
                android:text="주요상품등록"
                android:textColor="@color/MainColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/Arrow_goods"
                app:layout_constraintStart_toEndOf="@id/Arrow_goods"
                app:layout_constraintTop_toTopOf="@id/Arrow_goods" />

            <TextView
                android:id="@+id/tv_img"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_left_gray"
                android:gravity="center_vertical"
                android:hint="사진을 선택해주세요."
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@id/img_btn_layout"
                app:layout_constraintStart_toStartOf="@id/StName_ET"
                app:layout_constraintTop_toBottomOf="@id/Arrow_goods" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/img_btn_layout"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:background="@drawable/round_right_gray"
                app:layout_constraintBottom_toBottomOf="@id/tv_img"
                app:layout_constraintEnd_toEndOf="@id/mainImgBtn_layout3"
                app:layout_constraintStart_toEndOf="@id/tv_img"
                app:layout_constraintTop_toTopOf="@id/tv_img">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/imgBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/img"
                    android:scaleX="0.9"
                    android:scaleY="0.8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/goods_et"
                android:layout_width="0dp"
                android:layout_height="122dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_gray"
                android:gravity="top"
                android:hint="상품에 대한 설명을 적어주세요!"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:textColorHint="@color/black"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@id/img_btn_layout"
                app:layout_constraintStart_toStartOf="@id/tv_img"
                app:layout_constraintTop_toBottomOf="@id/tv_img" />

            <EditText
                android:id="@+id/goods_price"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_gray"
                android:hint="상품판매가격"
                android:paddingLeft="10dp"
                android:textColorHint="@color/black"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@id/img_btn_layout"
                app:layout_constraintStart_toStartOf="@id/tv_img"
                app:layout_constraintTop_toBottomOf="@id/goods_et" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/add_btn_layout"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="@id/goods_price"
                app:layout_constraintStart_toStartOf="@id/goods_price"
                app:layout_constraintTop_toBottomOf="@id/goods_price">

                <ImageView
                    android:id="@+id/addImg"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/addbtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="5dp"
                    android:text="주요상품추가등록하기"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@id/addImg"
                    app:layout_constraintStart_toEndOf="@id/addImg"
                    app:layout_constraintTop_toTopOf="@id/addImg" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/register_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/round_scarlet"
                android:fontFamily="@font/jua"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="등록하기"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@id/StName_ET"
                app:layout_constraintStart_toStartOf="@id/StName_ET"
                app:layout_constraintTop_toBottomOf="@id/add_btn_layout" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>